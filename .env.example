# Variables d'environnement pour Mon Petit Roadtrip v2

# API Configuration
API_BASE_URL_DEBUG=http://localhost:3000
API_BASE_URL_RELEASE=https://api.monpetitroadtrip.com
API_TIMEOUT=30000

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# Algolia Configuration (pour les suggestions de randonn√©es)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_INDEX_NAME=trails

# Google Places API Configuration
EXPO_PUBLIC_GOOGLE_API_KEY=your_google_places_api_key_here

# Features Flags
ENABLE_CHATBOT=true
ENABLE_OFFLINE_MODE=true
ENABLE_NOTIFICATIONS=true
ENABLE_GEOLOCATION=true

# Debug Options
DEBUG_SYNC=false
DEBUG_API_CALLS=false
DEBUG_WATERMELON=false
